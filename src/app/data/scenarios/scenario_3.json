{
    "id": "scenario_3",
    "title": "Entrainement electrosystolique",
    "description": "Un patient de 62 ans en arrêt cardio-respiratoire. Le massage cardiaque externe est en cours. Utilisez le défibrillateur en mode manuel pour délivrer un choc de 150 Joules.",
    "initialState": {
        "rhythmType": "bav3",
        "heartRate": 28,
        "bloodPressure": {
    "systolic": 83,
    "diastolic": 54
  }
    },
    "steps": [
        {
            "step": 0,
            "description": "Tournez la molette verte pour passer du mode ARRÊT au mode Stimulateur.",
            "validation": {
                "any_of": [
                    {
                        "type": "stateChange",
                        "property": "displayMode",
                        "value": "Stimulateur"
                    }
                ]
            }
        },
        {
            "step": 1,
            "description": "Règlez le mode de stimulation à sentinelle",
            "validation": {
                "all_of": [
                    {
                        "type": "stateChange",
                        "property": "pacerMode",
                        "value": "Sentinelle"
                    },
                    {
                        "type": "stateChange",
                        "property": "displayMode",
                        "value": "Stimulateur"
                    }
                ]
            }
        },
        {
            "step": 2,
            "description": "Règlez la fréquence de stimulation à 60",
            "validation": {
                "all_of": [
                    {
                        "type": "stateChange",
                        "property": "isSynchroMode",
                        "value": true
                    },
                    {
                        "type": "stateChange",
                        "property": "displayMode",
                        "value": "Stimulateur"
                    },
                    {
                        "type": "stateChange",
                        "property": "pacerFrequency",
                        "value": 60
                    }
                ]
            }
        },
        {
            "step": 3,
            "description": "Règlez l'intensité de stimulation à 10 mA",
            "validation": {
                "all_of": [
                    {
                        "type": "stateChange",
                        "property": "isSynchroMode",
                        "value": true
                    },
                    {
                        "type": "stateChange",
                        "property": "displayMode",
                        "value": "Stimulateur"
                    },
                    {
                        "type": "stateChange",
                        "property": "pacerIntensity",
                        "value": 10
                    }
                ]
            }
        },
        {
            "step": 4,
            "description": "Demarrez la stimulation",
            "validation": {
                "all_of": [
                    {
                        "type": "stateChange",
                        "property": "isPacing",
                        "value": true
                    }
                   
                ]
            }
        },
        {
            "step": 5,
            "description": "Règlez l'intensité de la stimulation jusqu'à la capture complète du rythme cardiaque.",
            "validation": {
                "all_of": [
                    {
                        "type": "stateChange",
                        "property": "isPacing",
                        "value": true
                    },
                    {
                        "type": "stateChange",
                        "property": "displayMode",
                        "value": "Stimulateur"
                    },
                    {
                        "type": "stateChange",
                        "property": "pacerIntensity",
                            "operator": ">=",
    "value": 90
                    }

                ]
            },
            "onComplete": [
    {
      "action": "updateState",
      "payload": {
        "bloodPressure": {
          "systolic": 116,
          "diastolic": 73
        }
      }
    }
  ]
        }
        
    ]
}